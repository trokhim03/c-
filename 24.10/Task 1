#include <iostream>

using namespace std;
int main() {
  long a;
  int counter;
  while (true){
    cin >> a;
    while (a!=1){
      if (a%2==0){
        a=a/2;
      }else if (a%2!=0){
        a=3*a+1;
      }
      cout << a << endl;
      counter++;
    }
    cout << "Кроки = ";
    cout << counter << endl;
    counter = 0;
  }
}
