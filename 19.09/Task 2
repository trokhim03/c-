#include <iostream>

int main() {

  std::cout << "Введіть цифру 1 щоб дізнатися першу букву річки Горинь, цифру 2 щоб дізнатися її довжину,цифру 3 щоб дізнатися скільки приток у Горинь!\n";
  int x = 0;
  std::cin >> x;

  switch (x) {
  case 1:
    std::cout << "Г";
    break;
  case 2:
    std::cout << "Довжина річки 659 км";
    break;
  case 3:
    std::cout << "Всього в річки Горинь 24 притоки";
    break;
 
  }
}
